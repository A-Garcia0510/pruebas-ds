# ========================================
# CONFIGURACIÓN DE PRODUCCIÓN - SISTEMA DE FIDELIZACIÓN
# ========================================

# ========================================
# BASE DE DATOS
# ========================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=loyalty_system
DB_USER=loyalty_user
DB_PASSWORD=your_secure_password
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# ========================================
# FASTAPI CONFIGURACIÓN
# ========================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false
API_LOG_LEVEL=INFO

# ========================================
# SEGURIDAD
# ========================================
SECRET_KEY=your_super_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ENCRYPTION_KEY=your_encryption_key_32_chars_long

# ========================================
# CACHÉ (REDIS)
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_TTL=3600

# ========================================
# EMAIL (NOTIFICACIONES)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@cafevt.com
EMAIL_REPLY_TO=support@cafevt.com

# ========================================
# MONITOREO Y LOGS
# ========================================
LOG_LEVEL=INFO
LOG_FILE=logs/loyalty_api.log
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# ========================================
# CONFIGURACIÓN DE FIDELIZACIÓN
# ========================================
DEFAULT_POINTS_PER_PESO=1.0
POINTS_EXPIRATION_DAYS=365
MAX_REFERRAL_BONUS=1000
TIER_UPGRADE_BONUS=100

# ========================================
# ENTORNO
# ========================================
ENVIRONMENT=production
DEBUG=false
CORS_ORIGINS=https://cafevt.com,https://www.cafevt.com

# ========================================
# BACKUP Y MIGRACIÓN
# ========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # 2 AM diario
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups/loyalty

# ========================================
# ALERTAS
# ========================================
ALERT_EMAIL=admin@cafevt.com
ALERT_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK 